{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": false,
    "noEmit": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": [
      "ESNext",
      "DOM",
      "DOM.Iterable"
    ],
    "types": [
      "node"
    ]
  },
  "include": [
    "packages/case-police/**/*.ts",
    "packages/dynamic-css/**/*.ts",
    "packages/front-matter/**/*.ts",
    "packages/google-fonts-loader/**/*.ts",
    "packages/utils/**/*.ts",
    "packages/vue-shortcuts/**/*.ts",
    "packages/vue-smart-pages/**/*.ts",
    "packages/vue-zoom/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    ".nuxt",
    "site",
    "packages/markdown-it-*/**"
  ]
}